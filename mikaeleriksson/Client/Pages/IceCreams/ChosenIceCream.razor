@page "/glass"
@using Microsoft.AspNetCore.Components.Authorization
@using Newtonsoft.Json;
@using mikaeleriksson.Shared;

@inject PublicClient PublicClient;

@if (iceCream != null)
{

    <div class="container-fluid">

        <div class="row">

            <div class="col-1"></div>

            <div class="card">


                <div class="card-body d-inline">

                    <div class=" col-lg-6 col-md-6  col-sm-12  float-start">
                        <img class="mx-auto d-block mt-3 img-fluid" src="@iceCream.Img" alt="https://via.placeholder.com/150x150" />
                    </div>


                    <div class=" col-lg-6 col-md-6 col-sm-12 ps-md-3 float-end">

                        <div class="float-end">
                            <AuthorizeView>
                                <Authorized>
                                    <button @onclick="checkToAddOrRemove"
                                        class="btn @( isFavorite == true ? "btn-danger" : "btn-secondary" )">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                        </svg>
                                    </button>
                                </Authorized>
                            </AuthorizeView>

                        </div>

                        <div class="float-start">

                            <h1 class="text-center">@iceCream.Name</h1>
                            <h3 class="mt-4">@iceCream.Info</h3>

                            <div class="mt-5">

                                <h5> <strong>Ingredienser:</strong></h5>
                                <p>
                                    GRÄDDE (27%), vatten, socker, kondenserad SKUMMJÖLK, glukossirap, ÄGGULA från frigående höns, kokosfett, HELMJÖLKSPULVER, ÄGGVITA, vaniljextrakt, stabiliseringsmedel (guarkärnmjöl, pektin, karragenan), MJÖLKFETT, emulgeringsmedel (SOJALECITIN). Kan innehålla vete. > Socker, vanilj handlade utifrån principerna för massbalans. Totalt 61% exklusive vatten och mejeriF. För mer info: info.fairtrade.net/sourcing Innehåller mjölk, soja och ägg. Kan innehålla vete.
                                    
                                </p>

                                <p>
                                    <strong>Förvaring:</strong> Förvara vid -18°C eller kallare
                                </p>

                            </div>

                        </div>

                       
                    </div>

                    <div class=" row col-lg-12">

                        <table class="table table-striped align-items-baseline">
                            <thead>
                            <th>Näringsämne </th>
                            <th>Per glass</th>

                            </thead>

                            <tbody>

                                <tr>

                                    <td>Energi</td>
                                    <td>@iceCream.nutritionalContent.Energy.Calorie kcal / @iceCream.nutritionalContent.Energy.Kilojoules kJ</td>

                                </tr>

                                <tr>

                                    <td>Fett</td>
                                    <td>@iceCream.nutritionalContent.Fat g</td>

                                </tr>


                                <tr>

                                    <td>Salt</td>
                                    <td>@iceCream.nutritionalContent.Salt g</td>

                                </tr>

                                <tr>

                                    <td>Kolhydrater</td>
                                    <td>@iceCream.nutritionalContent.Carbohydrates g</td>

                                </tr>

                                <tr>

                                    <td>Protein</td>
                                    <td>@iceCream.nutritionalContent.Protein g</td>

                                </tr>

                            </tbody>

                        </table>

                    </div>

                </div>
            </div>

            <div class="col-1"></div>
        </div>
    </div>
}
else
{
    <div>
        <p>Information om den här glassen finns inte tillgänglig.</p>
    </div>
}

