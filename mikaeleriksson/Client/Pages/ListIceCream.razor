@page "/Glasslista"

@inject HttpClient client;

@inject NavigationManager _navigationmanager;

<div class="containter-fluid">

    <div class="row">

            <div class="text-center">
                <h3>Våra glassar</h3>
                <h5>Kolla in hela vårt utbud av glädjespridare och hitta dina favoriter!</h5>
            </div>

            @if (allIcecreams != null)
            {
                @foreach (var ic in allIcecreams)
                {

                <div class="col-md-6 col-lg-4 col-sm-12 justify-content-center d-flex align-items-center">
                    <a id="cardglass" class="card mt-5 text-decoration-none text-dark" style="width:350px;height:460px" @onclick="(() => changeIceCream(ic.Name))" href="glass">

                        <div class="card-body d-flex flex-column mt-auto text-center">

                            <img class="mx-auto d-block mt-3 img-fluid my-auto" style="width:300px;height:300px;" src="@ic.Img" alt="https://via.placeholder.com/150x150" />
                            <h2 class="">@ic.Name</h2>

                            </div>
                        </a>
                    </div>


                }
            }
            else
            {
                <p>Inga glassar hittades</p>
            }

    </div>
</div>